/* pages/data/data.wxss */

.header {
    display: flex;
    padding: 0px 20px;
    height: 50px;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.header-text {
    font-weight: 800;
    font-size: 20px;
    color:royalblue;
}

.header-picker {
    min-width: 100px;
    padding: 0 8px;
    height: 30px;
    font-size: 14px;
    line-height: 30px;
    text-align: center;
    border-radius: 4px;
    background: #eee;
    color: #444444;
}

.box-header {
    width: 100%;
    height: 40px;
    padding: 10px;
    box-sizing: border-box;
    border: 1px solid #888888;
    color: #333333;
    font-size: 18px;
    line-height: 18px;
    font-weight: bold;
    background: #dae2fa;
}

.category {
    margin-left: 5px;
    font-size: 16px;
    color: #888888;
}

.table {
    display: flex;
    flex-direction: column;
    max-height: 300px;
    border: 1px solid #dadada;
}

.tr {
    display: flex;
    flex-direction: row;
}

.th, .td {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 25%;
    text-align: center;
    justify-content: center;
    border-top: 1px solid #dadada;
    border-bottom: 1px solid #dadada;
    border-left: 1px solid #dadada;
    border-right: 1px solid #dadada;
}

.th {
    font-weight: 800;
    background-color: #B3CCF4;
}

.td {
    background-color: #edf3e9;
}

.imagebox {
    display: flex;
    justify-content: center;
    align-items: center;
}

.cell-title {
    padding: 5px 10px;
    color: #666666;
    background: #eeeeee;
    font-size: 14px;
    border: 1px solid #cccccc;
}

.cell-input {
    padding: 5px 10px;
    color: #333333;
    font-size: 15px;
    border: 1px solid #cccccc;
}